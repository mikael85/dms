<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_slide_slide_form_inherits" model="ir.ui.view">
            <field name="name">slide.slide.form.inherits</field>
            <field name="model">slide.slide</field>
            <field name="inherit_id" ref="website_slides.view_slide_slide_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='document']/group/group/field[@name='mime_type']" position="after">
                    <field name="various_doc_formats" attrs="{'invisible': [('slide_type', 'not in', ('document', 'presentation'))]}"/>

                </xpath>
            </field>
        </record>
    </data>
</odoo>